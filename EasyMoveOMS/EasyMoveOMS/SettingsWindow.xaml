        <TextBox Name="tbAddr" HorizontalAlignment="Left" Height="23" Margin="138,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="385"/>
        <TextBox Name="tbZip" HorizontalAlignment="Left" Height="23" Margin="138,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="385"/>
    </Grid>
</Window>
